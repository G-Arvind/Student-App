<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_feed_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arvind.svce.FeedBack">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:id="@+id/toolbarfb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="title set by me"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:text="Rate our App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RatingBar
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:text="Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/comment"
        android:layout_marginTop="10dp"
        android:hint="Write your Comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:text="Feature Addons(if any)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/feature"
        android:layout_marginTop="10dp"
        android:hint="Any new ideas?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:text="Bug Reports(if any)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="10dp"
        android:hint="Any Errors?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/error" />

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/subfb"
        android:layout_marginTop="60dp"
        android:text="submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
